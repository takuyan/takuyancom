            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} takuyan.com
        .collapse.navbar-collapse.bs-navbar-collapse{role: :navigation}
          %ul.nav.navbar-nav
            %li
              %a{href: "http://blog.takuyan.com", rel: 'me', target: :_blank}
